namespace ConsoleApp1
{
    class Osoba
    {
        public string imie;
        public string nazwisko;
    }

    class Serwisant : Osoba
    {
        public int id_serwisanta;
    }
    class Opiekun : Osoba
    {
        public int id_opiekuna;
    }
    
    class Klient : Osoba
    {
        private int pesel;
        public int id_klienta;
    }
